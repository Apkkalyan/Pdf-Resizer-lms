{
    "manifest_version": 3,
    "name": "LMS PDF Resizer",
    "version": "1.0",
    "description": "Resize embedded PDFs on IGNOU LMS for comfortable viewing",
    "permissions": ["storage", "activeTab"],
    "content_scripts": [
      {
        "matches": ["https://lms.ignouonline.ac.in/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "icons": {
      "16": "icons/icon16.jpg"
    }
  }